<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.application.calderon.SignsLenguage.SignsLenguage.Activities.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight=".3"
        android:text="@string/text_1"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="44sp" />

    <Button
        android:layout_margin="15dp"
        android:id="@+id/buttonOne"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/boton_redondo"
        android:textSize="@dimen/textPrincipal"
        android:text="@string/phrases"
        android:layout_weight=".15"/>

    <Button
        android:id="@+id/buttonTwo"
        android:text="@string/alphabet"
        android:layout_margin="15dp"
        android:textSize="@dimen/textPrincipal"
        android:background="@drawable/boton_redondo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        />

    android:textSize="24dp"
    <Button
        android:id="@+id/buttonThree"
        android:text="@string/numbers"
        android:textSize="@dimen/textPrincipal"
        android:background="@drawable/boton_redondo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:layout_margin="15dp" />

    <Button
        android:id="@+id/buttonFour"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:background="@drawable/boton_redondo"
        android:textSize="@dimen/textPrincipal"
        android:text="Gramatica"
        android:layout_margin="15dp" />
</LinearLayout>
